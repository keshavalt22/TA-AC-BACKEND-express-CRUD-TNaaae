<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Document</title>
    <link rel="stylesheet" href="/stylesheet/style.css">
</head>
<body>
    <div class="container">
        <h1 class="heading">List Of Users</h1>
        <div>
            <a href="/users/new">
                <button class="btn-blue">Add user</button>
            </a>
        </div>
        <div class="list">
            <% users.forEach(user => { %>
                <h3><%= user.name %></h3>
                <a href="/users/<%= user._id %>">
                    <button class="btn-green">Show user</button>
                </a>
            <% }) %>
        </div>
    </div>
</body>
</html>